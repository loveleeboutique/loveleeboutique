
<div class="banner">
  <div class="taxon_title">
    <p><%= @taxon.name %></p>
  </div>
  <% if @taxon.image.try(:attachment?) %>
    <%= image_tag(@taxon.image.attachment.url(:banner) ) %>
  <% end %>
</div>


<% unless params[:keyword].present? %>
  <div data-hook="taxon_children">
    <%= render :partial => 'taxon', :collection => @taxon.children %>
  </div>
<% end %>

