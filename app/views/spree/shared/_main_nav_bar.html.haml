%nav
  %ul#main-nav-bar.sf-menu
    %li.home
      = link_to t(:home), root_path
    %li.new
      = link_to t(:new), new_path
    - Spree::Taxonomy.where(:name => "Categories").first.root.children.each do |taxon|
      %li{:class => taxon.name.downcase}
        = link_to taxon.name, seo_url(taxon)
        - if taxon.children.present?
          %ul
            - taxon.children.each do |child|
              %li= link_to child.name, seo_url(child)
    %li.contact
      = link_to "Contact", "/contact"
