<%= form_for @homepage_image, :url => spree.admin_cms_homepage_image_path(@homepage_image), :method => "PUT", :html => { :multipart => true } do |f| %>
  <% if @homepage_image.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@homepage_image.errors.count, "error") %> prohibited this homepage_image from being saved:</h2>

      <ul>
      <% @homepage_image.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
<br/>
  <div class="field">
    <h3><%= @homepage_image.description %></h3>
  </div>
<br/>
  <% if @homepage_image.image? %>
  	<%= image_tag @homepage_image.image(:default) %>
  <% end %>

    <div class="field">
    <h3>Image</h3>
    <%= f.file_field :image %>
  </div>
<br/>
  <div>
    <h3>Link</h3>
    <p>Type the link that you wish to link to the image, please include <b>http://www.</b> at the beginning of the link</p>
    <%= f.text_field :image_link %>
  </div>
<br/>
  <div>
    <h3>Item Label</h3>
    <%= f.text_field :item_label %>
  </div>
<% if @homepage_image.position == "slider" %>
    <br/>
      <div>
        <h3>Visible</h3>
        <%= f.check_box :visible %>
      </div>
<% end %>
<br/>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>

<%= link_to "Back", spree.admin_cms_homepage_images_path %>
